{
  "name": "Project progress bar",
  "description": "Adds a progress bar for loading and saving projects.",
  "credits": [
    {
      "name": "GarboMuffin"
    }
  ],
  "userscripts": [
    {
      "url": "userscript.js",
      "matches": ["https://localhost:8333/projects/*"],
      "runAtComplete": false
    }
  ],
  "userstyles": [
    {
      "url": "userstyle.css",
      "matches": ["https://localhost:8333/projects/*"]
    }
  ],
  "settings": [
    {
      "name": "Show progress bar at top of page",
      "id": "topbar",
      "type": "boolean",
      "default": false
    },
    {
      "name": "Progress bar height (px)",
      "id": "height",
      "type": "positive_integer",
      "default": 5
    }
  ],
  "tags": ["editor", "recommended"],
  "enabledByDefault": false,
  "l10n": true
}
