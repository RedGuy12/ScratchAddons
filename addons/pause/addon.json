{
  "name": "Pause button",
  "description": "Adds a pause button next to the green flag.",
  "info": [
    {
      "type": "notice",
      "text": "You can also programmatically pause a project in Scratch (also known as breakpoints) by creating a custom block with name \"sa-pause\" and using that block.",
      "id": "programpause"
    }
  ],
  "credits": [
    {
      "name": "Jeffalo"
    },
    {
      "name": "GarboMuffin"
    }
  ],
  "dynamicEnable": true,
  "dynamicDisable": true,
  "userscripts": [
    {
      "url": "userscript.js",
      "matches": ["https://localhost:8333/projects/*"]
    }
  ],
  "userstyles": [
    {
      "url": "style.css",
      "matches": ["https://localhost:8333/projects/*"]
    }
  ],
  "tags": ["editor", "recommended"],
  "enabledByDefault": false,
  "l10n": true
}
